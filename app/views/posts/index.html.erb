<h1>CHAT</h1>
<h2>投稿一覧</h2>
<div class="posts-container">
<%= link_to "新規投稿へ", new_post_path %>
  <% @posts.each do |t| %>
    <div class="post">
      <%= t.name %>
      <%= t.about %>
      <%= t.created_at %>
      <%= link_to "詳細へ", post_path(t.id) %>
      <%= link_to "編集する", edit_post_path(t.id) %>
      <%= button_to "削除する", post_path(t.id), method: :delete %>
    </div>
  <% end %>
</div>